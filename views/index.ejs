<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <h1>hello, <%= user ? user.profile.name : "friend" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <br>
  <br>
  <h1> <a href="./pets">Go to Main..</a> </h1>
  <br>
  <br>

  <div> <h3> Animals I provide care for: </h3></div>
    <table class="my-pets">
      <thead>
        <tr>
          <th> Name </th>
          <th>Microchip Number</th>
        </tr>
      </thead>
      <tbody>
        <% Pet.forEach(pet => { %>
          <tr>
            <td class="eachPet"><%= pet.name %></td>
            <td><%= pet._id %></td>
            <td><a class="moreInfo" href="pets/<%=pet._id%>">MORE</a> </td>
          </tr><br>
        <% }) %>
      </tbody>

    </table>
<br>

</main>

