<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <br>
  <h1>hello, <%= user ? user.profile.name : "friend" %></h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
  <% } %>
  <br>
  <br>
  <section>
    <div><br>
      <h3>Pets List</h3>
      <table class="my-pets">
        <thead>
          <tr>
            <th> Name </th>
            <th>Microchip Number</th>
          </tr>
        </thead>
        <tbody>
          <% pets.forEach(pet => { %>
            <tr>
              <td class="eachPet"><%= pet.name %></td>
              <td><%= pet._id %></td>
              <td><a class="moreInfo" href="./pets/<%=pet._id%>">MORE</a> </td>
            </tr><br>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
  <br>
  <br>


</main>

<%- include('./partials/footer') %>
