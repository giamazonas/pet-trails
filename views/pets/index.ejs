<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <section>
    <h2>Search here...!</h2>
    <div class="search-container">
      <form id="form" action="/views/pets" >
        <input type="text" placeholder="Enter microchip ID here.." name="search" >
        <button type="submit"><i class="fa fa-search">Search!</i></button>
        </form><br>

        <form id="form">
          <input type="search" id="query" name="q" placeholder="Enter microchip ID here..">
          <button>Search</button>
      </form>
    </div>
  </section>
  <section>
    <ul>
      <li>
        <div class="pill-nav">
          <a class="active" href="/pets/new">Add a Pet</a>
          <a href="/">See My Patients</a>
        </div>
      </li>
      <li></li>
    </ul>
  </section>
  <section>
    <div><br>
      <h3>Pets List</h3>
      <table class="my-pets">
        <thead>
          <tr>
            <th> Name </th>
            <th>Microchip Number</th>
          </tr>
        </thead>
        <tbody>
          <% pets.forEach(pet => { %>
            <tr>
              <td class="eachPet"><%= pet.name %></td>
              <td><%= pet._id %></td>
              <td><a class="moreInfo" href="pets/<%=pet._id%>">MORE</a> </td>
            </tr><br>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>

</main>
<%- include('../partials/footer') %>