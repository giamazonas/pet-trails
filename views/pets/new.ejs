<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>Add new animal</h1>
  <div id="form">
    <form action="/pets/new" method="POST">
      <label>Microchip:
        <input class="inputBox" type="Number" name="microchip" min="15" max="15" required>
      </label><br><br>
      <label>Name:
        <input class="inputBox" type="String" name="name" >
      </label><br><br>
      <label>Age:
        <input class="inputBox" type="Number" name="age" >
      </label><br><br>
      <label>Birthdate:
        <input class="inputBox" type="datetime-local" name="birthdate" >
      </label><br><br>
      <label>Breed:
          <input class="inputBox" type="String" name="breed" >
      </label><br><br>
      <label>Gender:
        <input class="inputBox" type="String" name="gender" >
      </label><br><br>
      <label>Vet information:
      <input class="inputBox" type="String" name="vetInfo" >
      </label><br><br>
      <label>Vaccines:
        <input class="inputBox" type="String" name="vaccines" >
      </label><br><br>
      <label>Medical Procedures:
        <input class="inputBox" type="String" name="medicalProcedures" >
      </label><br><br>
      <label>Fixed:
        <input class="inputBox" type="Boolean" name="fixed" >
      </label><br><br>
      <label>Notes:
        <input class="inputBox" type="String" name="notes" >
      </label><br><br>
      <label>Previous names:
        <input class="inputBox" type="String" name="nameOther" >
      </label><br><br>

    </form>
  </div>


</main>

<%- include('../partials/footer') %>